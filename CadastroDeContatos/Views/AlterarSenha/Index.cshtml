@using CadastroDeContatos.Enums;
@model UsuarioModel

@{
    ViewData["Title"] = "Alterar senha do usuário";
}

<div class="text-center">

    <h1 class="display-4">@ViewData["Title"]</h1>
</div>

<form asp-controller="AlterarSenha" asp-action="Alterar" method="post">

    <div class="form-group">
        <label for="nome">SenhaAtual</label>
        <input type="text" asp-for="SenhaAtual" class="form-control" placeholder="Digite a senha atual do usuário">
        <span asp-validation-for="SenhaAtual" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Editar</button>
    <a class="btn btn-secondary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
</form>